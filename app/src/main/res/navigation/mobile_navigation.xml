<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.yogaappadmin.fragment.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_ClassFormFragment"
            app:destination="@id/navigation_add_class" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.yogaappadmin.fragment.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_manage_settings"
        android:name="com.example.yogaappadmin.fragment.ManageSettingsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_manage_settings">
        <action
            android:id="@+id/action_manageSettings_to_teacherFormFragment"
            app:destination="@id/teacherFormFragment" />
        <action
            android:id="@+id/action_manageSettings_to_yogaTypeFormFragment"
            app:destination="@id/yogaTypeFormFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.yogaappadmin.fragment.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_add_class"
        android:name="com.example.yogaappadmin.fragment.ClassFormFragment"
        android:label="Add / Edit Class"
        tools:layout="@layout/fragment_class_form">

        <!-- Navigation arguments for add/edit mode -->
        <argument
            android:name="classId"
            app:argType="long"
            android:defaultValue="-1L" />

        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="dayCsv"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="time"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="capacity"
            app:argType="integer"
            android:defaultValue="0" />

        <argument
            android:name="duration"
            app:argType="integer"
            android:defaultValue="0" />

        <argument
            android:name="price"
            app:argType="float"
            android:defaultValue="0.0f" />

        <argument
            android:name="teacher"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="type"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="description"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/teacherFormFragment"
        android:name="com.example.yogaappadmin.fragment.TeacherFormFragment"
        android:label="Add / Edit Teacher"
        tools:layout="@layout/fragment_teacher_form">
        <!-- (Similarly, you may add arguments for teacherId, name, bio, classesCsv) -->
    </fragment>

    <fragment
        android:id="@+id/yogaTypeFormFragment"
        android:name="com.example.yogaappadmin.fragment.YogaTypeFormFragment"
        android:label="Add / Edit Class Type"
        tools:layout="@layout/fragment_yoga_type_form">
        <!-- (Similarly, you may add arguments for typeId, typeName, description) -->
    </fragment>

</navigation>
