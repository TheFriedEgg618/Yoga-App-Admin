<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_corner_background_white_with_border"
    android:padding="16dp"
    android:elevation="4dp">

    <!-- Class Icon -->
    <ImageView
        android:id="@+id/ivClassIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@drawable/ic_launcher_foreground"
        android:contentDescription="Class icon" />

    <!-- Details Container -->
    <LinearLayout
        android:id="@+id/layoutClassDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivClassIcon"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Class Type & Duration -->
        <TextView
            android:id="@+id/tvClassTypeDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Yoga - 60 MINS"
            android:textColor="@color/header_blue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Date & Time Row styled like Capacity & Price -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <TextView
                android:id="@+id/tvClassDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1.5"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Date: Monday, Oct 10"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvClassTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight=".5"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="Time: 11:00"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvClassCapacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1.5"
                android:text="Capacity: 15"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvClassPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="start"
                android:text="Price: Â£10.00"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

        </GridLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
