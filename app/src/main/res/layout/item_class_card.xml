<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginStart="16dp"
android:layout_marginEnd="16dp"
android:layout_marginTop="8dp"
android:layout_marginBottom="8dp"
android:background="@drawable/rounded_corner_background_white_with_border"
android:padding="16dp"
android:elevation="4dp">

<ImageView
    android:id="@+id/ivClassIcon"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:scaleType="centerCrop"
    android:background="@drawable/ic_launcher_background"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:srcCompat="@drawable/ic_launcher_foreground"
    android:contentDescription="Instructor image" />

<LinearLayout
    android:id="@+id/layoutClassDetails"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    app:layout_constraintStart_toEndOf="@id/ivClassIcon"
    app:layout_constraintEnd_toStartOf="@+id/ivClassArrow"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/tvClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="MAT PILATES-55 MINS"
        android:textColor="@color/header_blue"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvClassDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="Monday, Oct 10 @ 11:00 am"
        android:textColor="@color/text_black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvClassInstructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        tools:text="Instructor name"
        android:textColor="@color/text_dark_grey"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tvClassLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        tools:text="Union Street"
        android:textColor="@color/text_dark_grey"
        android:textSize="12sp"/>
</LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ivClassArrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_arrow_right_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>